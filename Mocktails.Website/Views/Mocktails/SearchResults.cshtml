@model IEnumerable<Mocktails.ApiClient.Products.DTOs.MocktailDTO>

<h2>Search Results</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var mocktail in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@mocktail.ImageUrl" class="card-img-top" alt="@mocktail.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@mocktail.Name</h5>
                        <p class="card-text">@mocktail.Description</p>
                        <p class="card-text font-weight-bold">$@mocktail.Price</p>
                        <a href="@Url.Action("Details", "Mocktails", new { id = mocktail.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No mocktails found with the given search criteria.</p>
}
