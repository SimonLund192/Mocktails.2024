@using Mocktails.ApiClient.Products.DTOs
@model             MocktailDTO

@{
    ViewData["Title"] = "Mocktail Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <!-- Display the mocktail image -->
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
