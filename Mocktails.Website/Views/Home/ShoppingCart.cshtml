@model IEnumerable<Mocktails.ApiClient.Products.DTOs.ShoppingCartDTO>

<h2>Shopping Cart</h2>
<table>
    <thead>
        <tr>
            <th>Mocktail</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MocktailId</td>
                <td>@item.Quantity</td>
                <td>
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
