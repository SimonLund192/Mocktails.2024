@model Mocktails.Website.Models.Cart

@{
    ViewData["Title"] = "Cart";
}

<div class="text-center" style="width:800px; margin:0px auto;">
    <h1 class="display-4">Cart</h1>
    @if (Model == null || Model.MocktailQuantities.Count == 0)
    {
        <div class="row">
            <div class="col-12 text-center">
                <h3>Cart is empty</h3>
            </div>
        </div>
    }
    else
    {
        @foreach (var keyvalue in Model.MocktailQuantities)
        {
            <div class="row" style="padding-top:2px;">
                <div class="col-6">
                    @{MocktailQuantity mocktailQuantity = @keyvalue.Value;}
                    @mocktailQuantity.Quantity @(mocktailQuantity.Name)(s)
                    at $@mocktailQuantity.Price each
                </div>
                <div class="col-3">
                    total $@mocktailQuantity.GetTotalPrice()
                    </div>
                <div class="col-3">
                    <a class="btn btn-primary" href="@Url.Action("Add", "ShoppingCart", new { id = mocktailQuantity.Id, quantity = -1 })" title="remove one">-1</a>
                    <a class="btn btn-primary" href="@Url.Action("Add", "ShoppingCart", new { id = mocktailQuantity.Id, quantity = 1 })" title="add one">+1</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "ShoppingCart", new { id = mocktailQuantity.Id })" title="delete product"><span class="bi-trash"></span></a>
                    
                </div>

                
            </div>
        }
    }
    <p></p>
    <h2 class="display-6">Total: $@Model.GetTotal()</h2>
    <a class="btn btn-danger" href="@Url.Action("EmptyCart", "ShoppingCart")">Empty entire cart <span class="bi bi-trash"></span></a>
    <div class="text-center">
        <a href="@Url.Action("Checkout", "ShoppingCart")" class="btn btn-success btn-lg">
            Proceed to Checkout
        </a>
    </div>
</div>