@model IEnumerable<Mocktails.ApiClient.Products.DTOs.ShoppingCartDTO>

<h1>Your Shopping Cart</h1>

<table>
    <thead>
        <tr>
            <th>Mocktail</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MocktailName</td>
                <td>@item.Quantity</td>
                <td>@item.MocktailPrice</td>
                <td>@(item.Quantity * item.MocktailPrice)</td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-itemId="@item.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
